@model IEnumerable<TrabalhoFinal.Models.Operacao>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Operações</h2>

@if (Model.Any())
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Operações</th></tr>
        </thead>
        <tbody>
            @foreach (var operacao in Model)
            {
                <tr><td>@Html.ActionLink(@operacao.NomeOperacao, "Details", new { operacao.Id })</td></tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nós ainda não temos nenhuma operação.</p>
}