@model TrabalhoFinal.ViewModels.OperacaoIndexViewModel

@{
    ViewBag.Title = Model.Title;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Operacao"))
{
    @Html.HiddenFor(m => m.Operacao.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Operacao.NomeOperacao)
        @Html.TextBoxFor(m => m.Operacao.NomeOperacao, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Operacao.Valor)
        @Html.TextBoxFor(m => m.Operacao.Valor, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Operacao.NrContaDestino)
        @Html.TextBoxFor(m => m.Operacao.NrContaDestino, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
}