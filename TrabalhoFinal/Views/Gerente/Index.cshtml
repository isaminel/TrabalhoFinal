@model TrabalhoFinal.ViewModels.GerenteIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Gerentes</h2>

@if (@Model.Gerentes.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Gerentes</th></tr>
        </thead>
        <tbody>
            @foreach (var gerente in Model.Gerentes)
            {
                <tr><td>@Html.ActionLink(@gerente.Nome, "Details", new { gerente.Id })</td></tr>
            }
        </tbody>
    </table>
}
else
{
    <p>We don't have any gerentes yet.</p>
}

