@model TrabalhoFinal.Models.Cliente
@{
    ViewBag.Title = "Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Cliente"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(c => c.Id)

    <div class="form-group">
        @Html.LabelFor(c => c.Nome)
        @Html.TextBoxFor(c => c.Nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Nome)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Cpf)
        @Html.TextBoxFor(c => c.Cpf, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Cpf)
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>

    @section scripts
{
        @Scripts.Render("~/bundles/jqueryval")
        <script type="text/javascript">
        $(function () {
            $.validator.methods.date = function (value, element) {
                Globalize.culture("pt-BR");
                return this.optional(element) || Globalize.parseDate(value) !== null;
            }
        })
        </script>
}
}