@model IEnumerable<TrabalhoFinal.Models.Cliente>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Clientes</h2>

@if (Model.Any())
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Cliente</th></tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr><td>@Html.ActionLink(@cliente.Nome, "Details", new { cliente.Id })</td></tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nós ainda não temos nenhum cliente.</p>
}

